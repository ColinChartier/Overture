<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
            xmlns:sothree="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bottom_bar_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            sothree:umanoPanelHeight="64dp"
            sothree:umanoShadowHeight="4dp">

        <!-- Main content -->
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">

            <include
                    android:id="@+id/app_bar"
                    layout="@layout/app_bar"/>


            <fragment android:id="@+id/song_list_fragment"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_gravity="start"
                      android:name="com.colinchartier.overture.app.fragments.SongListFragment"
                      tools:layout="@layout/fragment_song_list"/>
        </LinearLayout>


        <!-- Bottom bar -->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <fragment android:id="@+id/song_controls_fragment"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:name="com.colinchartier.overture.app.fragments.SongControlsFragment"
                      tools:layout="@layout/fragment_song_controls"/>
            <fragment
                    android:id="@+id/music_bars_fragment"
                    android:name="com.colinchartier.overture.app.fragments.MusicBarsFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"/>
        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <!-- Navigation drawer -->
    <fragment android:id="@+id/navigation_drawer_fragment"
              android:layout_width="@dimen/left_drawer_width"
              android:layout_height="match_parent"
              android:layout_gravity="start"
              android:name="com.colinchartier.overture.app.fragments.NavigationDrawerFragment"
              tools:layout="@layout/fragment_navigation_drawer"/>

</android.support.v4.widget.DrawerLayout>
